<%- include('../partials/header') %>
<h2>Enter new flight information</h2>
<form class="flights-new" action="/flights" method="POST">
  <label
    >Airline:
    <select name="airline">
      <option value="American">American</option>
      <option value="Southwest">SouthWest</option>
      <option value="United">United</option>
      <option value="Delta">Delta</option>
    </select> </label
  ><br />
  <label
    >Airport:
    <select name="airport">
      <option value="JFK">JFK</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select> </label
  ><br />
  <label
    >Flight Number:
    <input
      type="number"
      name="flightNo"
      min="10"
      max="9999"
      value="10"
    /> </label
  ><br />
  <label>Departs: <input type="datetime-local" name="departs" /> </label><br />
  <button class="add-btn" type="submit">ADD FLIGHT</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>
